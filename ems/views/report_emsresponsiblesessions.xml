        <template id="report_emsresponsiblesessions">
            <t t-call="report.html_container">

                <div class="header">
                    <style type="text/css">
                        <![CDATA[
                                    /* Kabel Bk BT */
                                    @font-face {
                                        font-family: 'Kabel Bk BT';
                                        font-style: normal;
                                        ;font-weight: 400;
                                        src: local('Kabel Bk BT'), url(/kabeln.ttf) format('truetype');
                                    }

                                    body {
                                        font-family: Kabel Bk BT;
                                        font-size: 1.1em;
                                    }
                                ]]>
                    </style>

                    <div class="row">
                        <div class="col-xs-4">
                            <img t-if="c.logo" t-att-src="'data:image/png;base64,%s' % c.logo"
                                 style="max-height: 4.5em;"/>
                        </div>
                        <div class="col-xs-8">
                            <div class="row">
                                <div class="col-xs-12">
                                    <h2 style="color:#006666;">You can do it!</h2>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <h3 style="color:#99cc00;">It always seems impossible until it's done</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="page">
                    <style type="text/css">
                        <![CDATA[
                                    /* Kabel Bk BT */
                                    @font-face {
                                        font-family: 'Kabel Bk BT';
                                        font-style: normal;
                                        ;font-weight: 400;
                                        src: local('Kabel Bk BT'), url(/kabeln.ttf) format('truetype');
                                    }

                                    body {
                                        font-family: Kabel Bk BT;
                                        font-size: 1.3em;
                                    }

                                    .bottom-black-line {
                                        border-bottom: 1.5px solid #000;
                                    }

                                    .bottom-gray-line {
                                        border-bottom: 1px solid #ccc;
                                    }

                                    .myrow1 {
                                        margin-left:0.6em;
                                    }

                                    .myrow2 {
                                        margin-left:1.2em;
                                    }
                            ]]>
                    </style>


                    <div class="row">
                        <div class="col-xs-7">
                            <h4 t-esc="docs.name"/>
                        </div>
                    </div>

                    <t t-set="total_minutes" t-value="0"/>
                    <t t-foreach="w" t-as="w">
                        <div class="row bottom-gray-line bg-success">
                            <div class="col-xs-8">
                                <strong t-esc="w['day']"/>
                            </div>
                        </div>
                        <t t-foreach="w['data']" t-as="d">
                            <t t-set="total_minutes" t-value="total_minutes+d['duration']"/>
                            <div class="row bottom-gray-line bg-warning">
                                <div class="myrow1">
                                    <div class="col-xs-8">
                                        <strong t-esc="d['datetime_str']"/>
                                    </div>
                                    <div class="col-xs-offset-3 col-xs-1">
                                        <strong t-esc="d['duration']"/>
                                    </div>
                                </div>
                            </div>

                            <div class="row bottom-black-line">
                                <div class="col-xs-12">
                                    <t t-foreach="d['sessions']" t-as="session">
                                        <div class="row">
                                            <div class="myrow2">
                                                <div class="col-xs-2">
                                                    <span t-field="session.service_id"/>
                                                </div>
                                                <div class="col-xs-5">
                                                    <span t-field="session.partner_text"/>
                                                </div>
                                                <div class="col-xs-2">
                                                    <span t-field="session.time_text"/>
                                                </div>
                                                <div class="col-xs-2">
                                                    <span t-field="session.state"/>
                                                </div>
                                                <div class="col-xs-1">
                                                    <span t-field="session.duration"/>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </t>
                    <div class="row">
                        <div class="col-xs-offset-10 col-xs-2">
                            <h4>Total:
                                <strong t-esc="total_minutes"/>
                            </h4>
                        </div>
                    </div>
                </div>

                <div class="footer">
                    <style type="text/css">
                        <![CDATA[
                                    /* Kabel Bk BT */
                                    @font-face {
                                        font-family: 'Kabel Bk BT';
                                        font-style: normal;
                                        ;font-weight: 400;
                                        src: local('Kabel Bk BT'), url(/kabeln.ttf) format('truetype');
                                    }

                                    body {
                                        font-family: Kabel Bk BT;
                                        font-size: 1.1em;
                                    }

                                    .text-small {
                                        font-size: 0.8em;
                                    }

                                    .myrow {
                                    font-size: 0;
                                    }
                                    .myrow > * {
                                        float: none;
                                        display: inline-block;
                                    }
                                    .myrow > *:last-child {
                                        vertical-align: center;
                                    }
                                    .myrow *:last-child {
                                        margin-top: 0; /* optional */
                                    }
                                ]]>
                    </style>
                    <div class="row mt8">
                        <div class="col-xs-8">
                            <div t-field="c.name"/>
                            <div>
                                <span t-field="c.phone"/>
                                -
                                <span t-field="c.partner_id.mobile"/>
                            </div>
                            <div>
                                <span t-esc="c.website.replace('https://','').replace('http://','')"/>
                                -
                                <span t-field="c.email"/>
                            </div>
                        </div>

                    </div>

                    <!--div class="row mt0 mb0 text-small">
                        <div t-if="p_size&gt;1" class="col-xs-offset-11 col-xs-1 text-small">
                            <span t-esc="p_index + 1"/>/
                            <span t-esc="p_size"/>
                        </div>
                    </div-->
                </div>
            </t>

        </template>
    </data>
</openerp>